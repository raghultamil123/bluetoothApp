<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/connected"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:text="@string/connected_device"
        android:textSize="28sp"/>
   <ListView
       android:layout_below="@id/connected"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/discovered_device"/>
   <TextView
       android:id="@+id/available"
       android:layout_below="@id/discovered_device"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:text="@string/available_device"
       android:textSize="28sp"
       android:layout_margin="8dp"/>
   <ListView
       android:layout_width="wrap_content"
       android:layout_marginLeft="16dp"
       android:layout_height="wrap_content"
      android:id="@+id/available_device"
      android:layout_below="@id/available"/>

</RelativeLayout>