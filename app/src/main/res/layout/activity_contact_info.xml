<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactInfo">
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/contact_image"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/contact_image"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_circle_contact"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_below="@id/contact_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contact_name_header"
            android:textSize="@dimen/contact_header"
            android:text="@string/first_name"

            />
        <TextView
            android:layout_width="wrap_content"
           android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/contact_content"
            android:id="@+id/contact_first_name_value"
            android:text="first name"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contact_last_name_header"
                android:textSize="@dimen/contact_header"
                android:text="@string/last_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:id="@+id/contact_last_name_value"
                android:textSize="@dimen/contact_content"
                android:text="@string/last_name"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/contact_header"
                android:id="@+id/contact_device_name_header"
                android:text="@string/device_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:id="@+id/contact_device_name_value"
                android:textSize="@dimen/contact_content"
                android:text="@string/last_name"/>


        </LinearLayout>

    </LinearLayout>



</RelativeLayout>